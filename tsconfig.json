{
  "compilerOptions": {
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "nodenext",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": false
  },
  "exclude": ["**/examples","**/dist"]
}
